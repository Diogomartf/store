<%= link_to('back to products', root_path, class: 'text-blue-500 text-sm hover:underline my-2') %>
<h1 class="text-5xl mt-4 mb-4 font-bold"><%=  @product.name %></h1>
<% if @product.description %>
  <p class="text-gray-600"><%= @product.description %></p>
<% end %>
<% if @product.average_rating > 0 %>
  <div class="py-6 flex items-center space-x-5">
    <p class="text-5xl"><%= number_with_precision(@product.average_rating, precision: 1) %></p>
    <%= render "stars", rating: @product.average_rating.floor %>
  </div>
<% end %>
<hr>
<div class="py-6">
  <div class="flex justify-between items-center">
    <h2 class="font-bold text-xl">Reviews</h2>
    <button id="button-add-review" class="shadow  bg-white border border-gray-300 text-gray-400 font-medium px-2 py-1 rounded text-sm hover:bg-gray-50">Add review</button>
  </div>
  <div class="my-3">
    <div class="grid gap-5 md:grid-cols-8">
      <% @product.reviews.each do |review| %>
        <div class="md:col-span-2">
          <div class="w-32">
            <%= render "stars", rating: review.rating %></div>
        </div>
        <p class="md:col-span-6">
          <span class="font-bold"><%= review.rating %></span>
          <span class="text-gray-500">, <%= review.comment %></span>
        </p>
      <% end %>
    </div>
  </div>
</div>
<%= render "modal" %>
